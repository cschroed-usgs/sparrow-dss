<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- Add 'debug="true"' in the root element to turn on debugging as this file loads -->
	
	<appender name="CA" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="ca %d{ABSOLUTE} %5p %C{1}:%L - %m%n" />
		</layout>
	</appender>
	<appender name="CA_Minimal" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="cam %C{1}:%L - %m%n" />
		</layout>
	</appender>
	<appender name="FILE" class="org.apache.log4j.FileAppender">
		<param name="File" value="${user.home}${file.separator}sparrow_validation_test_results.txt" />
		<param name="Append" value="false" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="f %d{ABSOLUTE} %5p %C{1}:%L - %m%n" />
		</layout>
	</appender>
	
	<!-- You will need to replace the 'File' param with a valid path on your system. -->
